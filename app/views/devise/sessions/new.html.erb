<p class="uppercase text-gray-700 text-sm font-semibold mb-2">OR</p>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , class:"uppercase text-gray-700 text-sm font-semibold mb-2"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight mt-1 focus:outline-none focus:shadow-outline", placeholder: "Email" %>
  </div>

  <div class="field my-4">
    <%= f.label :password, class:"uppercase text-gray-700 text-sm font-semibold mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 mt-1 leading-tight focus:outline-none focus:shadow-outline", placeholder:"******************" %>
  </div>
  <!--
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  -->
  <div class="actions flex flex-col">
    <%= f.submit "Sign in", class:" bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
<p class="text-center text-gray-600 text-md  mt-5">Don't have an account?</p>
<div class="text-center text-gray-600 text-md font-semibold  mt-5">
<%= render "devise/shared/links" %>
</div>
</div>

