<div id="<%= dom_id tweet %>">
  <p>
    <strong><%= tweet.user.name %></strong>
  </p>

  <p>
    @<%= tweet.user.username %>
  </p>

   <p>
    <%= time_ago_in_words(tweet.created_at) %> ago
  </p>

  <p>
     <strong>Body:</strong>
    <%= tweet.body %>
  </p>

  <p>
    <strong>Replies count:</strong>
    <%= tweet.replies_count %>
  </p>

  <p>
    <strong>Likes count:</strong>
    <%= tweet.likes_count %>
  </p>

  <div>
    <%= link_to "Like", new_like_path  %>
  </div>

    <%# tweet.user_id %>
    <%# tweet.parent_id %>

</div>
