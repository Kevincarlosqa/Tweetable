<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<%= form_with model:@tweets, url: tweets_path, method: :post do |form| %>
  <%= form.text_field :body %>
  <%= form.submit "Tweet" %>
<% end %>

<div id="tweets">
  <% @tweets.where(parent: nil).each do |tweet|%>
    
    <%= render tweet %>
    
   
  <% end %>
</div>

<%= link_to "New tweet", new_tweet_path %>
