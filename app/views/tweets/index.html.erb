<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<%= form_with url: tweets_path, method: :post do |form| %>
  <%= form.text_field :body %>
  <%= form.submit "Tweet" %>
<% end %>

<div id="tweets">
  <% @tweets.where(parent: nil).each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<%= link_to "New tweet", new_tweet_path %>
